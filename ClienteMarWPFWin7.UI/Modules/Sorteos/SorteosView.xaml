<UserControl x:Class="ClienteMarWPFWin7.UI.Modules.Sorteos.SorteosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClienteMarWPFWin7.UI.Modules.Sorteos"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
               xmlns:controls="clr-namespace:ClienteMarWPFWin7.UI.Modules.Sorteos.Modal"
              xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"     
             mc:Ignorable="d" PreviewKeyDown="PressTecla" KeyUp="OnKeyUp" Name="vistaSorteo" Loaded="SelectCampo"
             >
    <UserControl.Resources>
        <DataTemplate x:Key="ListCheckBoxTemplate">
            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" Click="CheckBox_Click" Checked="CheckBox_Checked_1">
                <CheckBox.Resources>
                    <Style TargetType="{x:Type CheckBox}">
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type CheckBox}">
                                    <Border x:Name="fondoC" Width="135" Height="40"  Background="LightGray" CornerRadius="2" Padding="5">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                            <!--<materialDesign:PackIcon Name="faicon2" Kind="{Binding Image}"  Width="25" Height="25" VerticalAlignment="Center" />-->
                                            <Label x:Name="title"   Content="{Binding Loteria}" FontSize="15"  HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="fondoC" Property="Background" Value="#00CC66"/>
                                            <Setter TargetName="title" Property="Foreground" Value="White"/>
                                            <!--<Setter TargetName="faicon2" Property="Foreground" Value="White"/>-->
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect  BlurRadius="15" Direction="310" Color="#ABB2B9" RenderingBias="Quality" />
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                                <Condition Property="IsChecked" Value="False"/>
                                            </MultiTrigger.Conditions>
                                        </MultiTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </CheckBox.Resources>
            </CheckBox>
        </DataTemplate>
        <!--- GroupName="SorteosList"-->
        <DataTemplate x:Key="ListRadioButton" >
            <CheckBox  IsChecked="{Binding IsSelected, Mode=TwoWay}" Click="CheckBox_ClickOne" Checked="CheckBox_Checked">
