                <!-- /////////////////// Template Vacio ///////////////////////// -->
                <Grid HorizontalAlignment="Stretch"  Height="Auto" Width="Auto" Margin="15,0,0,4" VerticalAlignment="Stretch" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">

                </Grid> 
                <!-- /////////////////// Fin Template Vacio ///////////////////////// -->
               
                <!-- /////////////////// Template De Suma de ventas ///////////////////////// -->
                <Grid x:Name="RPTSumaVentas" Visibility="{Binding RPTSumaVentasVisibility}" HorizontalAlignment="Stretch" Width="Auto" Margin="15,0,0,0" VerticalAlignment="Top" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions >
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="85px"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="30px"></RowDefinition>

                    </Grid.RowDefinitions>


                    <StackPanel Margin="0,0"  Orientation="Vertical" Grid.Column="0" Grid.Row="0" Background="WhiteSmoke">
                        <Label HorizontalAlignment="Center" Padding="0,0" Margin="0,0" FontSize="16px" Content="{Binding NombreBanca,Mode=OneWay}"></Label>

                        <Label HorizontalAlignment="Center" Margin="0,0"  Padding="0,0" FontSize="14px" Content="{Binding NombreReporte,Mode=OneWay}"></Label>
                        <Label HorizontalAlignment="Center" Margin="0,0"  Padding="0,0" FontSize="14px" Content="{Binding FechaReporte,Mode=OneWay}"></Label>
                        <Label HorizontalAlignment="Center" Margin="0,0"  Padding="0,0" FontSize="14px" Content="{Binding FechaActualReport,Mode=OneWay}"></Label>

                    </StackPanel>
                    <Button  Style="{DynamicResource btn-primary}"  Grid.Column="0" Grid.Row="0" VerticalAlignment="Top" Command="{Binding PrintReportes}" Foreground="White" Width="50" HorizontalContentAlignment="Left" HorizontalAlignment="Right" Margin="0 5 3 4">
                        <StackPanel Orientation="Horizontal" >
                            <materialDesign:PackIcon Kind="Printer" Margin="0 0" VerticalAlignment="Top" Width="20" Height="20" Foreground="White"/>

                        </StackPanel>
                    </Button>


                    <DataGrid  ScrollViewer.VerticalScrollBarVisibility="Visible" CanUserResizeColumns="False" CanUserResizeRows="False" Grid.Column="0" Grid.Row="1" Name="infoReport" ItemsSource="{Binding InformacionesReportes,UpdateSourceTrigger=PropertyChanged}" CanUserSortColumns="True"  CanUserAddRows="False"  AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridCell" x:Key="AlignLeft">
                                <Style.Setters >
                                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                                </Style.Setters>
                            </Style>
                            <Style TargetType="DataGridCell" x:Key="AlignRight">
                                <Style.Setters>
                                    <Setter Property="HorizontalAlignment" Value="Right" />
                                </Style.Setters>
                            </Style>
                            <Style TargetType="DataGridColumnHeader" x:Key="Altura">
                                <Style.Setters>
                                    <Setter Property="Height" Value="25" />
                                    <Setter Property="Width" Value="Auto" />
                                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="Background" Value="DarkSeaGreen"/>
                                    <Setter Property="BorderBrush" Value="White"/>
                                    <Setter Property="BorderThickness" Value="1,0,1,0"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                </Style.Setters>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <DataGridTextColumn HeaderStyle="{StaticResource Altura}" CellStyle="{StaticResource AlignLeft}" Width="140" Header="CONCEPTO"  Binding="{Binding Concepto}" EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"></DataGridTextColumn>
                            <DataGridTextColumn HeaderStyle="{StaticResource Altura}" CellStyle="{StaticResource AlignRight}" Width="*" Header="VENTA" Binding="{Binding Resultado}" EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"></DataGridTextColumn>
                            <DataGridTextColumn HeaderStyle="{StaticResource Altura}" CellStyle="{StaticResource AlignRight}" Width="*" Header="COMIS." Binding="{Binding Comision}" EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"></DataGridTextColumn>
                            <DataGridTextColumn HeaderStyle="{StaticResource Altura}" CellStyle="{StaticResource AlignRight}" Width="*" Header="SACO" Binding="{Binding Saco}" EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"></DataGridTextColumn>
                            <DataGridTextColumn  HeaderStyle="{StaticResource Altura}" CellStyle="{StaticResource AlignRight}" Width="*" Header="BALANCE" Binding="{Binding Balance}" EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Grid Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Height="25px" Margin="0,0,18,0" Background="MediumSeaGreen" VerticalAlignment="Bottom">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>

                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <Label  Grid.Column="0" FontWeight="Bold" BorderBrush="White" BorderThickness="0,0,0,0" VerticalAlignment="Center" Foreground="White" Width="Auto"  Grid.Row="0" HorizontalAlignment="Center" Margin="0,0"  Padding="0,0" FontSize="13px" Content="TOTAL"></Label>
                        <Label Grid.Column="1" FontWeight="Bold" BorderBrush="White" BorderThickness="0,0,1,0" VerticalAlignment="Center" Foreground="White" Width="Auto"   Grid.Row="0"  HorizontalAlignment="Right" Margin="0,0"  Padding="3,0" FontSize="13px" Content="{Binding TotalResultado,Mode=OneWay}"></Label>
                        <Label Grid.Column="2" FontWeight="Bold" BorderBrush="White" BorderThickness="0,0,1,0" VerticalAlignment="Center" Foreground="White" Width="Auto"  Grid.Row="0"  HorizontalAlignment="Right"  Margin="0,0"  Padding="3,0" FontSize="13px" Content="{Binding TotalComision,Mode=OneWay}"></Label>
                        <Label Grid.Column="3" FontWeight="Bold" BorderBrush="White" BorderThickness="0,0,1,0" VerticalAlignment="Center" Foreground="White" Width="Auto"  Grid.Row="0" HorizontalAlignment="Right"   Margin="0,0"  Padding="3,0" FontSize="13px" Content="{Binding TotalSaco,Mode=OneWay}"></Label>
                        <Label Grid.Column="4" FontWeight="Bold" BorderBrush="White" BorderThickness="0,0,1,0" VerticalAlignment="Center" Foreground="White" Width="Auto"  Grid.Row="0"  HorizontalAlignment="Right"  Margin="0,0"  Padding="3,0" FontSize="13px" Content="{Binding TotalBalance,Mode=OneWay}"></Label>

                    </Grid>
                </Grid>
                <!--- //////////////////// Fin Template Suma de ventas ///////////////////////-->

                <!-- //////////////////// Template Reportes Ganadores //////////////////////-->
                <ScrollViewer  VerticalScrollBarVisibility="Auto" HorizontalAlignment="Stretch" Height="Auto" Width="Auto" Margin="15,0,0,0" VerticalContentAlignment="Top" VerticalAlignment="Top" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Visibility="{Binding RPTTicketGanadoresVisibility}">
                    <Grid Background="WhiteSmoke" Name="GridGanadores" Visibility="{Binding RPTTicketGanadoresVisibility}" Width="Auto" Margin="0,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Stretch" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="110"></RowDefinition>
                            <RowDefinition Height="30"></RowDefinition>
                            <RowDefinition x:Name="EncabezadoPagados" Height="Auto"></RowDefinition>
                            <RowDefinition x:Name="GridTicketPagados" Height="Auto"></RowDefinition>
                            <RowDefinition x:Name="EncabezadoPendientePagos" Height="Auto"></RowDefinition>
                            <RowDefinition x:Name="GridTicketPendientesPagoss" Height="Auto"></RowDefinition>
                            <RowDefinition x:Name="EncabezadoSinReclamar" Height="Auto"></RowDefinition>
                            <RowDefinition x:Name="GridTicketSinReclamar" Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <StackPanel Height="110px" VerticalAlignment="Top" Margin="0 "  Orientation="Vertical" Grid.Column="0" Grid.Row="0" Background="WhiteSmoke">
                            <Label HorizontalAlignment="Center" Padding="0,0" Margin="0,0" FontSize="16px" Content="{Binding NombreBanca,Mode=OneWay}"></Label>
                            <Label HorizontalAlignment="Center" Margin="0,0"  Padding="0,0" FontSize="14px" Content="{Binding NombreReporte,Mode=OneWay}"></Label>
                            <Label HorizontalAlignment="Center" Margin="0,0"  Padding="0,0" FontSize="14px" Content="{Binding FechaReporte,Mode=OneWay}"></Label>
                            <Label HorizontalAlignment="Center" Margin="0,0"  Padding="0,0" FontSize="14px" Content="{Binding FechaActualReport,Mode=OneWay}"></Label>
                            <Label HorizontalAlignment="Center" Margin="0,0"  Padding="0,0" FontSize="14px" Content="{Binding NombreLoteria,Mode=OneWay}"></Label>
                        </StackPanel>
                        <Button  Style="{DynamicResource btn-primary}"  Grid.Column="0" Grid.Row="0" VerticalAlignment="Top" Command="{Binding PrintReportes}" Foreground="White" Width="50" HorizontalContentAlignment="Left" HorizontalAlignment="Right" Margin="0 5 0 4">
                            <StackPanel Orientation="Horizontal" >
                                <materialDesign:PackIcon Kind="Printer" Margin="0 0 0 0" VerticalAlignment="Top" Width="20" Height="20" Foreground="White"/>

                            </StackPanel>
                        </Button>
                        <!-- ___________________________________________________ Premios ______________________________________________________ -->
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top"  Orientation="Horizontal" Height="Auto" Visibility="{Binding ReportesGanadores.MostrarPremiosVisibity}" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" >
                            <Label Content="Premios -> " FontSize="15" FontWeight="Bold"></Label>
                            <Label Content="1ra:"  FontSize="15" FontWeight="Bold"></Label>
                            <Label Content="{Binding ReportesGanadores.Primera}"  FontSize="15"></Label>
                            <Label Content="2da:"  FontSize="15" FontWeight="Bold"></Label>
                            <Label Content="{Binding ReportesGanadores.Segunda}"  FontSize="15"></Label>
                            <Label Content="3ra:"  FontSize="15" FontWeight="Bold"></Label>
                            <Label Content="{Binding ReportesGanadores.Tercera}"  FontSize="15"></Label>
                        </StackPanel>
                        <Label FontWeight="Bold" Margin="0 0 0 0" Content="--PREMIOS NO DISPONIBLES--" Visibility="{Binding ReportesGanadores.NoMostrarPremiosVisibity}" HorizontalAlignment="Center" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1"></Label>


                        <Label Margin="0 0 0 0" Grid.Column="0" Grid.ColumnSpan="2" Opacity="0.8" Visibility="{Binding ReportesGanadores.MostrarNoHayGanadoresVisibity}" Grid.Row="{Binding ReportesGanadores.PosicionTituloPagados}" BorderBrush="White" Background="MediumSeaGreen" Width="400" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Height="Auto" VerticalContentAlignment="Center" FontSize="16" Foreground="White">No Existen Tickets Ganadores!</Label>

                        <!-- __________________________________________________________________________________________________________________ -->
                        <!-- ___________________________________________________Ticket Pagados _________________________________________________ -->

                        <Label  Grid.Column="0" Grid.ColumnSpan="4" Visibility="{Binding ReportesGanadores.PagadosVisibility}" FontSize="14" Grid.Row="{Binding ReportesGanadores.PosicionTituloPagados}" FontWeight="Bold" Background="MediumSeaGreen" HorizontalContentAlignment="Center" Foreground="White" Width="Auto" Content="Tickets Pagados" HorizontalAlignment="Stretch" Height="Auto"></Label>

                        <DataGrid  Visibility="{Binding ReportesGanadores.PagadosVisibility}"  ScrollViewer.VerticalScrollBarVisibility="Auto" Height="Auto" CanUserResizeColumns="False" CanUserResizeRows="False" Grid.Column="0" Grid.Row="{Binding ReportesGanadores.PosicionTablaPagados}" ItemsSource="{Binding ReportesGanadores.Pagados}" CanUserSortColumns="False"  CanUserAddRows="False"  AutoGenerateColumns="False" IsReadOnly="True">
                            <DataGrid.Resources>
                                <Style TargetType="DataGridCell" x:Key="AlignLeft">
                                    <Style.Setters >
                                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                                    </Style.Setters>
                                </Style>
                                <Style TargetType="DataGridCell" x:Key="AlignCenterRed">
                                    <Style.Setters >
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                        <Setter Property="Foreground" Value="Red"/>
                                    </Style.Setters>
                                </Style>
                                <Style TargetType="DataGridCell" x:Key="AlignRight">
                                    <Style.Setters>
