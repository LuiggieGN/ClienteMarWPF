                    <Button Style="{DynamicResource btn-primary}" Grid.Column="0" MinWidth="170" HorizontalContentAlignment="Left" Click="reporteid_Click" Command="{Binding Path=AbrirModalRangoFechaCommand}" Width="170" HorizontalAlignment="Stretch" Height="30" Margin="2,3,2,0" VerticalAlignment="Top" Grid.Row="2">
