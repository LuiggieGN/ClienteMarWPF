                        </DataGrid.Columns>
                    </DataGrid>
                    <Grid Grid.Column="0" Grid.Row="4" Width="Auto" Grid.ColumnSpan="4" Height="25px" Margin="0,0,18,0" Background="MediumSeaGreen" VerticalAlignment="Bottom" HorizontalAlignment="Stretch">
