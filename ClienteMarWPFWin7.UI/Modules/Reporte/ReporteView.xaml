    <Grid ScrollViewer.CanContentScroll="False" VerticalAlignment="Top" x:Name="Principal">

        <Grid x:Name="GridAOcultar" ScrollViewer.CanContentScroll="False" Height="Auto"  VerticalAlignment="Stretch" MaxHeight="1250px">
            <Grid.Resources>
                <DataTemplate x:Key="ListRadioButton">
                    <RadioButton GroupName="SorteosList"  IsChecked="{Binding IsSelected, Mode=TwoWay}">
                        <RadioButton.Resources>
                            <Style TargetType="{x:Type RadioButton}">
                                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type RadioButton}">
                                            <Border x:Name="fondoC" Width="150" Height="40"  Background="LightGray" CornerRadius="2" Padding="5">
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Name="faicon2" Kind="{Binding Image}"  Width="25" Height="25" VerticalAlignment="Center" />
                                                    <Label x:Name="title"   Content="{Binding Loteria}" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" />
                                                </StackPanel>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="fondoC" Property="Background" Value="#00171F"/>
                                                    <Setter TargetName="title" Property="Foreground" Value="White"/>
                                                    <Setter TargetName="faicon2" Property="Foreground" Value="White"/>
                                                    <Setter Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect  BlurRadius="15" Direction="310" Color="#ABB2B9" RenderingBias="Quality" />
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <MultiTrigger>
                                                    <MultiTrigger.Conditions>
                                                        <Condition Property="IsMouseOver" Value="True"/>
                                                        <Condition Property="IsChecked" Value="False"/>
                                                    </MultiTrigger.Conditions>
                                                </MultiTrigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </RadioButton.Resources>
                    </RadioButton>
                </DataTemplate>


            </Grid.Resources>

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border Background="{DynamicResource MenuLeftBackground}" Height="40">
                <Label Content="Reportes" FontSize="18" Foreground="White" VerticalContentAlignment="Center" Margin="20 0" FontWeight="Bold"/>
            </Border>

            <Grid Grid.Row="1" Margin="10" ScrollViewer.CanContentScroll="False" VerticalAlignment="Top" Height="Auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition/>
                </Grid.RowDefinitions>


                <StackPanel Orientation="Horizontal" Grid.Row="0" Width="168px" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.ColumnSpan="1" Margin="4 0 0 0">
                    <DatePicker Name="Fecha" Width="153" SelectedDate="{Binding Fecha, UpdateSourceTrigger=PropertyChanged}" Margin="10 0" materialDesign:HintAssist.Hint="Seleccionar Fecha"  Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
                </StackPanel>
                <StackPanel Grid.Column="0" Grid.Row="0" VerticalAlignment="Top" Margin="0 50 0 7">
                    <Label Margin="9 0" FontSize="10px">Loterias</Label>
                    <ComboBox x:Name="listSorteo" Margin="10 0" HorizontalAlignment="Left" ItemsSource="{Binding Sorteos}" SelectedItem="0" Width="148px" SelectionChanged="listSorteo_SelectionChanged" SelectedIndex="0">
                        <ComboBox.ItemTemplate >
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" >
